{#
/**
 * @file
 * Default theme implementation for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 *
 * @ingroup themeable
 */
#}

{% if breadcrumb %}
    <div role="navigation" aria-labelledby="system-breadcrumb" class="ornote-breadcrumb">
        <ul class="ornote-breadcrumb--inner">
            <li class="breadcrumb-item label">
                <span>Petit Poucet</span>
                <span class="breadcrumb-arrow"></span>
            </li>
            {% for item in breadcrumb %}
                <li class="breadcrumb-item">
                    {% if item.url %}
                        <a href="{{ item.url }}">
                            <span class="breadcrumb-arrow"></span>
                            {{ item.text }}
                        </a>
                    {% else %}
                        {{ item.text }}
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endif %}
